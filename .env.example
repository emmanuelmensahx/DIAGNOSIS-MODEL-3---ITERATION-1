# AfriDiag Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost/afridiag
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DB_NAME=afridiag

# Security
SECRET_KEY=your_secret_key_here_change_in_production

# File Storage
UPLOAD_DIR=./uploads
ML_MODELS_DIR=./ml_models

# Logging
LOG_LEVEL=INFO

# Email Configuration (Optional)
SMTP_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_SENDER_EMAIL=noreply@afridiag.org

# Frontend URL
FRONTEND_URL=http://localhost:3000

# ===== LLM INTEGRATION =====

# LLM General Configuration
LLM_ENABLED=false
LLM_PRIMARY_PROVIDER=gemini
LLM_FALLBACK_PROVIDER=grok
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.3

# Google Gemini Configuration (FREE TIER AVAILABLE!)
GEMINI_ENABLED=false
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Grok 3 (xAI) Configuration
GROK_ENABLED=false
GROK_API_KEY=your_grok_api_key_here
GROK_API_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-3

# OpenAI GPT Configuration
OPENAI_ENABLED=false
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ===== INTEGRATION SERVICES =====

# Mapping Service Configuration
# Choose provider: google, mapbox, osm
MAPPING_PROVIDER=google

# Google Maps API (if using Google Maps)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Mapbox API (if using Mapbox)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# Video Call Service Configuration
# Choose provider: zoom, agora, jitsi
VIDEO_CALL_PROVIDER=agora

# Zoom API (if using Zoom)
ZOOM_API_KEY=your_zoom_api_key_here
ZOOM_API_SECRET=your_zoom_api_secret_here

# Agora API (if using Agora)
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here

# Jitsi Configuration (if using Jitsi)
JITSI_DOMAIN=meet.jit.si

# Virtual Board Service Configuration
# Choose provider: custom, miro, figma
BOARD_PROVIDER=custom

# Miro API (if using Miro)
MIRO_CLIENT_ID=your_miro_client_id_here
MIRO_CLIENT_SECRET=your_miro_client_secret_here
MIRO_ACCESS_TOKEN=your_miro_access_token_here

# Figma API (if using Figma)
FIGMA_ACCESS_TOKEN=your_figma_access_token_here

# ===== INTEGRATION SERVICE NOTES =====
#
# Mapping Services:
# - Google Maps: Requires API key from Google Cloud Console
# - Mapbox: Requires access token from Mapbox account
# - OSM: Uses OpenStreetMap, no API key required
#
# Video Call Services:
# - Zoom: Requires Zoom App credentials
# - Agora: Requires Agora.io account and app credentials
# - Jitsi: Can use public Jitsi Meet or self-hosted instance
#
# Virtual Board Services:
# - Custom: Built-in collaborative board (no external API required)
# - Miro: Requires Miro developer account and OAuth setup
# - Figma: Requires Figma developer account and access token
#
# For development, you can use the default providers:
# - MAPPING_PROVIDER=osm (no API key required)
# - VIDEO_CALL_PROVIDER=jitsi (uses public Jitsi Meet)
# - BOARD_PROVIDER=custom (built-in solution)
#
# LLM Integration:
# - Grok 3: Get API key from https://console.x.ai/ (offers $25 free monthly credits)
# - OpenAI GPT: Get API key from https://platform.openai.com/api-keys
# - Set LLM_ENABLED=true to enable LLM-enhanced diagnosis
# - Choose primary provider (grok or openai) and fallback provider
# - LLM integration enhances traditional ML diagnosis with AI analysis
# - If LLM fails, system falls back to traditional ML prediction